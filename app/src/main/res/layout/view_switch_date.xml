<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="全天" />

        <Switch
            android:id="@+id/btSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp" />

    </LinearLayout>

    <View style="@style/h_1_line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <LinearLayout
            android:id="@+id/dateTimeLayout"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.example.modelapp.view.switchdate.RollerView
                android:id="@+id/dateRoller"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <com.example.modelapp.view.switchdate.RollerView
                android:id="@+id/hourRoller"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.example.modelapp.view.switchdate.RollerView
                android:id="@+id/timeRoller"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/allDayLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.example.modelapp.view.switchdate.RollerView
                android:id="@+id/yearRoller"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6" />

            <com.example.modelapp.view.switchdate.RollerView
                android:id="@+id/monthRoller"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4" />

            <com.example.modelapp.view.switchdate.RollerView
                android:id="@+id/dayRoller"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"/>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:background="@drawable/shape_over_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btBegin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#2E7AFD"
            android:text="开始时间" />

        <View style="@style/v_1_line" />

        <TextView
            android:id="@+id/btEnd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#999999"
            android:text="结束时间" />
    </LinearLayout>
</LinearLayout>